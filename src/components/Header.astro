---
const navItems = [
  { name: 'Home', href: '/' },
  { name: 'About', href: '/about' },
  { name: 'Products', href: '/products' },
  { name: 'Brands', href: '/brands' },
  { name: 'Special Offers', href: '/offers' },
  { name: 'Contact', href: '/contact' },
];
---

<header class="bg-white shadow-sm sticky top-0 z-50">
  <div class="container mx-auto px-4 py-2">
    <div class="flex justify-between items-center">
      <a href="/" class="text-primary-700 font-display font-bold text-2xl">
        Roop Trading Company
      </a>
      
      <!-- Mobile menu button -->
      <button id="menu-toggle" class="md:hidden p-2 text-neutral-800 hover:text-primary-600 transition-colors">
        <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
          <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
        </svg>
      </button>
      
      <!-- Desktop navigation -->
      <nav class="hidden md:flex space-x-1">
        {navItems.map(item => (
          <a 
            href={item.href} 
            class="px-3 py-2 text-sm font-medium rounded-md hover:bg-primary-50 hover:text-primary-700 transition-colors"
          >
            {item.name}
          </a>
        ))}
        <a 
          href="/contact" 
          class="ml-2 px-4 py-2 text-sm font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-md transition-colors"
        >
          Get Quote
        </a>
      </nav>
    </div>
    
    <!-- Mobile navigation -->
    <nav id="mobile-menu" class="hidden md:hidden py-2 mt-2 space-y-1">
      {navItems.map(item => (
        <a 
          href={item.href} 
          class="block px-3 py-2 text-base font-medium rounded-md hover:bg-primary-50 hover:text-primary-700 transition-colors"
        >
          {item.name}
        </a>
      ))}
      <a 
        href="/contact" 
        class="block px-4 py-2 mt-2 text-base font-medium text-white bg-primary-600 hover:bg-primary-700 rounded-md transition-colors"
      >
        Get Quote
      </a>
    </nav>
  </div>
</header>

<script>
  // Mobile menu toggle functionality
  const menuToggle = document.getElementById('menu-toggle');
  const mobileMenu = document.getElementById('mobile-menu');
  
  if (menuToggle && mobileMenu) {
    menuToggle.addEventListener('click', () => {
      mobileMenu.classList.toggle('hidden');
    });
  }
</script>
