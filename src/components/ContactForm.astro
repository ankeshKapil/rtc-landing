<section class="py-16">
  <div class="container mx-auto px-4">
    <div class="bg-white rounded-lg shadow-lg overflow-hidden">
      <div class="md:flex">
        <!-- Contact information -->
        <div class="bg-primary-700 text-white md:w-1/3 p-8">
          <h2 class="text-2xl font-bold mb-6">Contact Information</h2>

          <div class="space-y-6">
