---
interface Testimonial {
  name: string;
  role: string;
  content: string;
  location: string;
}

const testimonials: Testimonial[] = [
  {
    name: "Raj Kumar",
    role: "Local Contractor",
    content: "I've been purchasing construction materials from this shop for over 5 years. Their cement and Kamdhenu TMT bars are always of the highest quality, and their bulk order discounts save me a lot of money on my projects.",
    location: "Hamirpur"
  },
  {
    name: "Sunita Devi",
    role: "Dairy Farmer",
    content: "The cattle feed from this shop has significantly improved milk production in my dairy farm. The staff is very knowledgeable about animal nutrition and always provides great advice.",
    location: "Bhota Village"
  },
  {
    name: "Mahesh Singh",
    role: "Restaurant Owner",
    content: "For our restaurant supplies, this is our go-to shop. Their wholesale prices on grocery items and Elephant Masalas are unbeatable. The dham package they prepared for my daughter's wedding was perfect!",
    location: "Sujanpur"
  }
];
---

<section class="py-16 bg-neutral-100">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">What Our Customers Say</h2>
      <p class="max-w-2xl mx-auto text-neutral-700">Don't just take our word for it â€“ hear from our satisfied customers across Himachal Pradesh</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {testimonials.map((testimonial) => (
        <div class="bg-white rounded-lg shadow-md p-6 flex flex-col">
          <div class="mb-4">
            <svg class="h-8 w-8 text-primary-500" fill="currentColor" viewBox="0 0 24 24">
              <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z" />
            </svg>
          </div>
          <p class="text-neutral-600 mb-6 flex-grow">{testimonial.content}</p>
          <div class="mt-auto">
            <p class="font-semibold">{testimonial.name}</p>
            <p class="text-sm text-neutral-500">{testimonial.role}, {testimonial.location}</p>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>
