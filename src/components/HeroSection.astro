---
interface Props {
  title: string;
  subtitle: string;
  ctaText?: string;
  ctaLink?: string;
  imageSrc: string;
}

const { 
  title, 
  subtitle, 
  ctaText = "Browse Products", 
  ctaLink = "/products",
  imageSrc 
} = Astro.props;
---

<section class="relative overflow-hidden">
  <!-- Background image with overlay -->
  <div class="absolute inset-0 z-0">
    <img 
      src={imageSrc} 
      alt="Hero background" 
      class="w-full h-full object-cover" 
      loading="eager"
    />
    <div class="absolute inset-0 bg-black bg-opacity-50"></div>
  </div>
  
  <!-- Content -->
  <div class="container mx-auto px-4 py-20 md:py-32 min-h-[70vh] flex items-center relative z-10">
    <div class="max-w-xl">
      <h1 class="text-4xl md:text-5xl lg:text-6xl font-bold text-white mb-4 animate-fade-in">
        {title}
      </h1>
      <p class="text-lg md:text-xl text-white/90 mb-8 animate-slide-up">
        {subtitle}
      </p>
      <div class="flex flex-wrap gap-4">
        <a 
          href={ctaLink} 
          class="inline-block bg-primary-600 hover:bg-primary-700 text-white font-medium px-6 py-3 rounded-md transition-colors animate-slide-up"
        >
          {ctaText}
        </a>
        <a 
          href="/contact" 
          class="inline-block bg-white hover:bg-neutral-100 text-primary-700 font-medium px-6 py-3 rounded-md transition-colors animate-slide-up"
        >
          Contact Us
        </a>
      </div>
    </div>
  </div>
</section>
