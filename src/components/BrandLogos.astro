---
import { Image } from 'astro:assets';
import bangur from '../assets/bangur.png';
import elephant from '../assets/elephant.png';
import jalani from '../assets/jalani.png';
import Kamdhenu from '../assets/Kamdhenu.svg';
import p_mark from '../assets/p_mark.png';
import rajdhani from '../assets/rajdhani.png';
import rajdhani_besan from '../assets/rajdhani_besan.png';
import acc from '../assets/acc.png';

interface Brand {
  name: string;
  logo: ImageMetadata;
  description: string;
  link: string;
}

const brands: Brand[] = [
  {
    name: "Bangur Cement",
    logo: bangur,
    description: "High-quality cement for all construction needs",
    link: "/brands#bangur"
  },
  {
    name: "Kamdhenu TMT",
    logo: Kamdhenu,
    description: "Superior strength TMT bars for reinforcement",
    link: "/brands#kamdhenu"
  },
  {
    name: "Elephant Masalas",
    logo: elephant,
    description: "Authentic spices for traditional Himachali recipes",
    link: "/brands#elephant"
  },
  {
    name: "Rajdhani Mustard Oil",
    logo: rajdhani,
    description: "Pure cold pressed mustard oil",
    link: "/brands#rajdhani"
  },
  {
    name: "P.Mark Mustard Oil",
    logo: p_mark,
    description: "Pure cold pressed mustard oil",
    link: "/brands#p-mark"
  },
  {
    name: "Jalani",
    logo: jalani,
    description: "Healthy and Hygienic food products",
    link: "/brands#jalani"
  },
  {
    name: "Rajdhani Group",
    logo: rajdhani_besan,
    description: "Natural & Safe Besan",
    link: "/brands#rajdhani-besan"
  },
  {
    name: "ACC Cement",
    logo: acc,
    description: "High-quality cement for all construction needs",
    link: "/brands#acc"
  },
];
---

<section class="py-16 bg-neutral-50">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Our Brand Partners</h2>
      <p class="max-w-2xl mx-auto text-neutral-700">Authorized dealer for these premium brands, ensuring you get authentic products at the best prices.</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {brands.map((brand) => (
        <a 
          href={brand.link} 
          class="flex flex-col bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition-shadow duration-300"
        >
          <div class="h-48 overflow-hidden">
            <Image
              src={brand.logo}
              alt={`${brand.name} logo`} 
              class="w-full h-full object-cover"
              loading="lazy"
            />
          </div>
          <div class="p-5 flex-grow">
            <h3 class="text-xl font-semibold mb-2">{brand.name}</h3>
            <p class="text-neutral-600">{brand.description}</p>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
