---
interface Offer {
  title: string;
  description: string;
  image: string;
  discount: string;
}

const offers: Offer[] = [
  {
    title: "Wholesale Discount",
    description: "Special pricing for bulk orders across all product categories. Perfect for retailers and business customers.",
    image: "https://images.pexels.com/photos/7203788/pexels-photo-7203788.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    discount: "Up to 15% Off"
  },
  {
    title: "Construction Material Bundle",
    description: "Complete package deals on cement, TMT bars, and other construction essentials for your building projects.",
    image: "https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    discount: "10% Off"
  },
  {
    title: "Dham Order Special",
    description: "Special packages for traditional Himachali Dham ceremonies. All grocery and masala items at discounted rates.",
    image: "https://images.pexels.com/photos/958545/pexels-photo-958545.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1",
    discount: "12% Off"
  }
];
---

<section class="py-16 bg-gradient-to-br from-secondary-50 to-secondary-100">
  <div class="container mx-auto px-4">
    <div class="text-center mb-12">
      <h2 class="text-3xl md:text-4xl font-bold mb-4">Special Offers</h2>
      <p class="max-w-2xl mx-auto text-neutral-700">Take advantage of these exclusive discounts and special promotions</p>
    </div>
    
    <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
      {offers.map((offer) => (
        <div class="bg-white rounded-lg shadow-md overflow-hidden">
          <div class="relative">
            <img 
              src={offer.image} 
              alt={offer.title} 
              class="w-full h-48 object-cover"
              loading="lazy"
            />
            <div class="absolute top-0 right-0 bg-secondary-600 text-white px-4 py-2 rounded-bl-lg font-bold">
              {offer.discount}
            </div>
          </div>
          <div class="p-5">
            <h3 class="text-xl font-semibold mb-2">{offer.title}</h3>
            <p class="text-neutral-600 mb-4">{offer.description}</p>
            <a 
              href="/contact" 
              class="inline-block bg-secondary-600 hover:bg-secondary-700 text-white font-medium px-4 py-2 rounded-md transition-colors"
            >
              Get This Offer
            </a>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>