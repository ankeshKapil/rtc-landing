---
const currentYear = new Date().getFullYear();

const sections = [
  {
    title: 'Quick Links',
    links: [
      { name: 'Home', href: '/' },
      { name: 'About Us', href: '/about' },
      { name: 'Products', href: '/products' },
      { name: 'Brands', href: '/brands' },
      { name: 'Special Offers', href: '/offers' },
      { name: 'Contact', href: '/contact' },
    ]
  },
  {
    title: 'Products',
    links: [
      { name: 'Grocery Items', href: '/products#grocery' },
      { name: 'Cattle Feed', href: '/products#cattle-feed' },
      { name: 'Construction Material', href: '/products#construction' },
      { name: 'Karyana Items', href: '/products#karyana' },
    ]
  },
  {
    title: 'Our Brands',
    links: [
      { name: 'Nutricana', href: '/brands#nutricana' },
      { name: 'ACC Cement', href: '/brands#acc' },
      { name: 'Kamdhenu TMT', href: '/brands#kamdhenu' },
      { name: 'Woosh Washing Powder', href: '/brands#woosh' },
      { name: 'Elephant Masalas', href: '/brands#elephant' },
    ]
  }
];
---

<footer class="bg-neutral-900 text-white pt-12 pb-6">
  <div class="container mx-auto px-4">
    <!-- Footer top -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 mb-12">
      <!-- Business info -->
      <div>
        <h3 class="text-xl font-display font-bold mb-4">Roop Trading Company</h3>
        <p class="mb-4 text-neutral-300">Your trusted wholesale and retail shop in Hamirpur for grocery, construction material, cattle feed and more.</p>
        <address class="not-italic text-neutral-300 mb-4">
          <p class="mb-1">CHOWKI JAMWALAN, SH 39,</p>
          <p class="mb-1">Hamirpur, Himachal Pradesh 177020</p>
          <p class="mb-1">Phone: +91-7018657685</p>
          <p>Email: rooptrading85@gmail.com</p>
        </address>
      </div>
      
      <!-- Footer sections -->
      {sections.map(section => (
        <div>
          <h3 class="text-lg font-display font-semibold mb-4">{section.title}</h3>
          <ul class="space-y-2">
            {section.links.map(link => (
              <li>
                <a 
                  href={link.href} 
                  class="text-neutral-300 hover:text-white transition-colors"
                >
                  {link.name}
                </a>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>
    
    <!-- Footer bottom -->
    <div class="border-t border-neutral-800 pt-6">
      <div class="flex flex-col md:flex-row justify-between items-center">
        <p class="text-sm text-neutral-400 mb-4 md:mb-0">
          &copy; {currentYear} Roop Trading Company. All rights reserved.
        </p>
        <div class="flex space-x-4">
          <a href="https://wa.me/message/FKYUH6F4TCIVA1" class="text-neutral-400 hover:text-white transition-colors">
            <span class="sr-only">WhatsApp</span>
