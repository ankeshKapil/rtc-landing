---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';
import cattle_feed from '../assets/cattle_feed.png';
import bangur from '../assets/bangur.png';
import elephant from '../assets/elephant.png';
import jalani from '../assets/jalani.png';
import Kamdhenu from '../assets/Kamdhenu.svg';
import p_mark from '../assets/p_mark.png';
import rajdhani from '../assets/rajdhani.png';
import rajdhani_besan from '../assets/rajdhani_besan.png';
import acc from '../assets/acc.png';
import Image from 'astro/components/Image.astro';

const brands = [
  {
    id: "Cattle feeds",
    name: "Cattle Feed",
    logo: cattle_feed,
    description: "Our cattle feed products are designed to enhance milk production, improve cattle health, and support overall growth and development.",
    products: [
      "Binola Khal",
      "Chokher",
      "Taramira",
      "Sarson Khali",
      "Premium Dairy Feed",
      "Calf Growth Formula",
      "High-Yield Cattle Feed",
      "Mineral Mixtures"
    ]
  },
  {
    id: "bangur",
    name: "Cement",
    logo: bangur,
    description: "Bangur Limited is one of India's leading manufacturers of cement and ready-mix concrete.Bangur has been at the forefront of sustainable construction practices, providing high-quality cement for all construction needs.",
    products: [
      "Bangur PowerMax",
      "Bangur Magna",
    ]
  },
  {
    id: "kamdhenu",
    name: "Kamdhenu TMT",
    logo: Kamdhenu,
    description: "Kamdhenu Limited is a renowned name in the steel industry, producing high-quality TMT bars that offer superior strength and durability. Their TMT bars are known for earthquake resistance, high ductility, and excellent bonding with concrete.",
    products: [
      "Kamdhenu NXT",
      "Structural Steel"
    ]
  },
  {
    id: "elephant",
    name: "Elephant Masalas",
    logo: elephant,
    description: "Elephant Masalas is a trusted brand known for its authentic and pure spices. Their products bring out the true flavors of traditional Indian cuisine, especially Himachali dishes. Each spice is carefully sourced and processed to retain its natural aroma and flavor.",
    products: [
      "Garam Masala",
      "Dham Special Blend",
      "Chana Masala",
      "Kitchen King Masala"
    ]
  }
];
---

<Layout
  title="Roop Trading Company Hamirpur"
  description="Explore the premium brands we represent as authorized dealers including Bangur Cement, Kamdhenu TMT, Jindal TMT,Pipes, and Elephant Masalas and many more"
>
  <HeroSection 
    title="Our Premium Brands"
    subtitle="We are proud to be authorized dealers of these high-quality brands"
    imageSrc="https://images.pexels.com/photos/669609/pexels-photo-669609.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />
  
  <section class="py-12 bg-neutral-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Authorized Brand Partnerships</h2>
        <p class="text-lg text-neutral-700 mb-8">
          As authorized dealers of these premium brands, we ensure you get authentic products at competitive prices. Our long-standing relationships with these manufacturers allow us to offer special deals and the latest products.
        </p>
      </div>
    </div>
  </section>
  
  {brands.map((brand) => (
    <section class="py-16 border-b border-neutral-200" id={brand.id}>
      <div class="container mx-auto px-4">
        <div class="md:flex items-center gap-12">
          <div class="md:w-1/3 mb-8 md:mb-0">
            <div class="bg-white p-4 rounded-lg shadow-md overflow-hidden">
              <Image
                src={brand.logo}
                alt={`${brand.name} logo`} 
                class="w-full h-64 object-cover"
                loading="lazy"
              />
            </div>
          </div>
          <div class="md:w-2/3">
            <h2 class="text-3xl font-bold mb-4">{brand.name}</h2>
            <p class="text-lg text-neutral-700 mb-6">{brand.description}</p>
            
            <h3 class="text-xl font-semibold mb-3">Products Available:</h3>
            <ul class="grid grid-cols-1 md:grid-cols-2 gap-2 mb-6">
              {brand.products.map((product) => (
                <li class="flex items-center">
                  <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 text-primary-600 mr-2" viewBox="0 0 20 20" fill="currentColor">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                  </svg>
                  {product}
                </li>
              ))}
            </ul>
            
            <a 
              href="/contact" 
              class="inline-block px-6 py-3 bg-primary-600 text-white rounded-md hover:bg-primary-700 transition-colors"
            >
              Inquire About {brand.name}
            </a>
          </div>
        </div>
      </div>
    </section>
  ))}
  
  <section class="py-16 bg-primary-50">
    <div class="container mx-auto px-4 text-center">
      <h2 class="text-3xl font-bold mb-6">Looking for Special Brand Products?</h2>
      <p class="text-lg text-neutral-700 mb-8 max-w-3xl mx-auto">
        If you're looking for specific products from these brands or have bulk requirements, please contact us. We can arrange special orders and provide competitive quotes.
      </p>
      <a href="/contact" class="inline-block px-8 py-4 bg-primary-600 text-white font-medium rounded-md hover:bg-primary-700 transition-colors">Contact Us for Branded Products</a>
    </div>
  </section>
</Layout>
