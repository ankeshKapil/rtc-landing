---
import Layout from '../layouts/Layout.astro';
import HeroSection from '../components/HeroSection.astro';

const offers = [
  {
    title: "Wholesale Discount Program",
    description: "Special pricing for bulk orders across all product categories. Perfect for retailers, businesses, and institutions looking to purchase in large quantities.",
    discount: "Up to 15% Off",
    conditions: [
      "Minimum order value varies by product category",
      "Discounts increase with order size",
      "Free delivery for orders above ₹10,000",
      "Special payment terms available for regular customers"
    ],
    image: "https://images.pexels.com/photos/7203788/pexels-photo-7203788.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  },
  {
    title: "Construction Material Bundle",
    description: "Complete package deals on cement, TMT bars, and other construction essentials for your building projects. Save more when you purchase complete bundles.",
    discount: "10% Off",
    conditions: [
      "Available for residential and commercial construction projects",
      "Custom bundles can be created based on project requirements",
      "Technical consultation available for material selection",
      "Free site delivery within Hamirpur district"
    ],
    image: "https://images.pexels.com/photos/1216589/pexels-photo-1216589.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  },
  {
    title: "Dham Order Special",
    description: "Special packages for traditional Himachali Dham ceremonies. All grocery and masala items at discounted rates to make your special occasions more affordable.",
    discount: "12% Off",
    conditions: [
      "Advance booking required (minimum 7 days)",
      "Customizable package based on guest count",
      "Includes all essential grocery items and spices",
      "Free delivery and setup assistance available"
    ],
    image: "https://images.pexels.com/photos/958545/pexels-photo-958545.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  },
  {
    title: "Seasonal Farmer's Package",
    description: "Special seasonal discounts on cattle feed, agricultural supplies, and related products for farmers. Support for the local farming community.",
    discount: "8-12% Off",
    conditions: [
      "Available during key agricultural seasons",
      "Cattle feed, seeds, and agricultural tools included",
      "Special group discounts for farmer cooperatives",
      "Technical guidance on product usage available"
    ],
    image: "https://images.pexels.com/photos/235925/pexels-photo-235925.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  },
  {
    title: "First-Time Customer Discount",
    description: "Special discount for first-time customers to welcome you to our store and help you experience our quality products and service.",
    discount: "5% Off First Order",
    conditions: [
      "Valid on first purchase only",
      "Minimum purchase value of ₹1,000",
      "Cannot be combined with other offers",
      "Valid for both retail and wholesale customers"
    ],
    image: "https://images.pexels.com/photos/6169662/pexels-photo-6169662.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  },
  {
    title: "Loyalty Rewards Program",
    description: "Earn points on every purchase that can be redeemed for discounts on future orders. Our way of thanking our regular customers.",
    discount: "Earn 1 point per ₹100 spent",
    conditions: [
      "Points valid for 1 year from date of issue",
      "100 points = ₹100 discount",
      "Special bonus points on festive occasions",
      "Additional benefits for premium members"
    ],
    image: "https://images.pexels.com/photos/5926389/pexels-photo-5926389.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  }
];
---

<Layout
  title="Special Offers - Roop Trading Company Hamirpur"
  description="Explore our special discounts and promotional offers on grocery items, construction materials, cattle feed, and more. Save more on wholesale and bulk orders."
>
  <HeroSection 
    title="Special Offers & Discounts"
    subtitle="Take advantage of our exclusive deals and promotional offers"
    imageSrc="https://images.pexels.com/photos/4386404/pexels-photo-4386404.jpeg?auto=compress&cs=tinysrgb&w=1260&h=750&dpr=1"
  />
  
  <section class="py-12 bg-neutral-50">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto text-center">
        <h2 class="text-3xl font-bold mb-6">Current Promotions</h2>
        <p class="text-lg text-neutral-700 mb-8">
          We regularly offer special discounts and promotions to help our customers save more. These offers are designed to provide maximum value for both retail and wholesale customers.
        </p>
      </div>
    </div>
  </section>
  
  <section class="py-16">

    <div class="container mx-auto px-4">
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {offers.map((offer) => (
          <div class="bg-white rounded-lg shadow-md overflow-hidden">
            <div class="relative">
              <img 
                src={offer.image} 
                alt={offer.title} 
                class="w-full h-48 object-cover"
                loading="lazy"
              />
              <div class="absolute top-0 right-0 bg-secondary-600 text-white px-4 py-2 rounded-bl-lg font-bold">
                {offer.discount}
              </div>
            </div>
            <div class="p-5">
              <h3 class="text-xl font-semibold mb-2">{offer.title}</h3>
              <p class="text-neutral-600 mb-4">{offer.description}</p>
              
              <h4 class="font-medium text-neutral-800 mb-2">Terms & Conditions:</h4>
              <ul class="text-sm text-neutral-600 space-y-1 mb-4">
                {offer.conditions.map((condition) => (
                  <li class="flex items-start">
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-4 w-4 text-secondary-600 mr-2 mt-0.5" viewBox="0 0 20 20" fill="currentColor">
                      <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd" />
                    </svg>
                    {condition}
                  </li>
                ))}
              </ul>
              
              <a 
                href="/contact" 
                class="inline-block w-full text-center bg-secondary-600 hover:bg-secondary-700 text-white font-medium px-4 py-2 rounded-md transition-colors"
              >
                Claim This Offer
              </a>
            </div>
          </div>
        ))}
      </div>
    </div>
  </section>
  
  <section class="py-16 bg-gradient-to-br from-primary-50 to-primary-100">
    <div class="container mx-auto px-4">
      <div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
        <div class="md:flex">
          <div class="p-8 md:w-2/3">
            <h2 class="text-2xl font-bold mb-4">Request Custom Quote</h2>
            <p class="text-neutral-600 mb-6">
              Need a special discount or custom pricing for a large order? Fill out this form and our team will get back to you with a personalized quote.
            </p>
            
            <form id="quote-form" class="space-y-4">
              <div class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <div>
                  <label for="name" class="block text-sm font-medium text-neutral-700 mb-1">Your Name</label>
                  <input 
                    type="text" 
                    id="name" 
                    name="name" 
                    class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                    required
                  />
                </div>
                <div>
                  <label for="phone" class="block text-sm font-medium text-neutral-700 mb-1">Phone Number</label>
                  <input 
                    type="tel" 
                    id="phone" 
                    name="phone" 
                    class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                    required
                  />
                </div>
              </div>
              
              <div>
                <label for="product-type" class="block text-sm font-medium text-neutral-700 mb-1">Product Category</label>
                <select 
                  id="product-type" 
                  name="product-type" 
                  class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  required
                >
                  <option value="" disabled selected>Select a category</option>
                  <option value="grocery">Grocery Items</option>
                  <option value="construction">Construction Materials</option>
                  <option value="cattle-feed">Cattle Feed</option>
                  <option value="dham">Dham Order</option>
                  <option value="mixed">Mixed Order</option>
                </select>
              </div>
              
              <div>
                <label for="message" class="block text-sm font-medium text-neutral-700 mb-1">Order Details</label>
                <textarea 
                  id="message" 
                  name="message" 
                  rows="3" 
                  class="w-full px-4 py-2 border border-neutral-300 rounded-md focus:ring-2 focus:ring-primary-500 focus:border-primary-500"
                  placeholder="Please provide details about your requirements"
                  required
                ></textarea>
              </div>
              
              <button 
                type="submit" 
                class="w-full bg-primary-600 hover:bg-primary-700 text-white font-medium py-2 px-4 rounded-md transition-colors"
              >
                Request Quote
              </button>
            </form>
          </div>
          
          <div class="bg-primary-700 text-white p-8 md:w-1/3">
            <h3 class="text-xl font-bold mb-4">Why Request a Quote?</h3>
            <ul class="space-y-4">
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Get the best possible pricing</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Custom package tailored to your needs</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Special payment and delivery terms</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Volume-based incentives</span>
              </li>
              <li class="flex items-start">
                <svg xmlns="http://www.w3.org/2000/svg" class="h-5 w-5 mr-2 mt-0.5" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                </svg>
                <span>Professional advice on product selection</span>
              </li>
            </ul>
          </div>
        </div>
      </div>
    </div>
  </section>
</Layout>

<script>
document.addEventListener('DOMContentLoaded', () => {
  const form = document.getElementById('quote-form');
  
  if (form) {
    form.addEventListener('submit', (e) => {
      e.preventDefault();
      
      // Here you would typically send the form data to your server
      // For this example, we'll just show a success message
      alert('Thank you for your quote request! Our team will contact you shortly with a personalized offer.');
      form.reset();
    });
  }
});
</script>
