---
import { SEO } from 'astro-seo';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import "../styles/global.css";
import Analytics from '@vercel/analytics/astro'
export interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const { 
  title = "Roop Trading Company - Wholesale & Retail Store in Hamirpur, HP",
  description = "Your trusted wholesale and retail store in Hamirpur, Himachal Pradesh for grocery, construction material, cattle feed and more. Special discounts on wholesale orders.",
  image = "/images/shop-front.jpg"
} = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;700&family=Poppins:wght@600;700&display=swap" rel="stylesheet">
    <Analytics/>
    <SEO
      title={title}
      description={description}
      openGraph={{
        basic: {
          title: title,
          type: "website",
          image: image,
        },
        optional: {
          siteName: "Roop Trading Company Hamirpur",
          description: description,
        },
      }}
      twitter={{
        card: "summary_large_image",
        site: "@karyanashop",
        title: title,
        description: description,
        image: image,
      }}
      extend={{
        meta: [
          {
            name: "keywords",
            content: "wholesale shop, retail shop, grocery, cattle feed, construction material, Hamirpur, Himachal Pradesh, Nutricana, ACC cement, Kamdhenu TMT"
          },
          {
            name: "geo.region",
            content: "IN-HP"
          },
          {
            name: "geo.placename",
            content: "Hamirpur"
          }
        ],
        link: [
          { rel: "canonical", href: Astro.url.href }
        ],
      }}
    />
    
    <!-- Schema.org JSON-LD for local business -->
    <script type="application/ld+json">
      {
        "@context": "https://schema.org",
        "@type": "LocalBusiness",
        "name": "Roop Trading Company",
        "image": "/images/shop-front.jpg",
        "url": "https://karyana-shop-hamirpur.com",
        "telephone": "+91-9876543210",
        "priceRange": "₹₹",
        "address": {
          "@type": "PostalAddress",
          "streetAddress": "CHOWKI JAMWALAN, SH 39",
          "addressLocality": "Hamirpur",
          "addressRegion": "Himachal Pradesh",
          "postalCode": "177020",
          "addressCountry": "IN"
        },
        "geo": {
          "@type": "GeoCoordinates",
          "latitude": 31.6861,
          "longitude": 76.5213
        },
        "openingHoursSpecification": {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": [
            "Monday",
            "Tuesday",
            "Wednesday",
            "Thursday",
            "Friday",
            "Saturday",
            "Sunday"
          ],
          "opens": "09:00",
          "closes": "19:00"
        }
      }
    </script>
  </head>
  <body class="min-h-screen flex flex-col bg-neutral-50">
    <Header/>
    <main class="flex-1">
      <slot />
    </main>
    <Footer/>
  </body>
</html>

<style is:global>
  html {
    scroll-behavior: smooth;
  }
  
  body {
    font-family: 'Inter', system-ui, sans-serif;
    color: #282828;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-family: 'Poppins', system-ui, sans-serif;
    font-weight: 700;
    line-height: 1.2;
  }
  
  p, li {
    line-height: 1.5;
  }
  @media print {
    body {
      margin: 0;
      padding: 0;
    }

    .container {
      box-shadow: none;
      margin: 0;
      padding: 10mm; /* Smaller padding for print */
      width: 100%;
      height: auto;
      min-height: 297mm; /* A4 height */
      display: block; /* Ensure block display for print flow */
    }

    /* Hide the print button and add/remove buttons when printing */
    .no-print {
      display: none !important;
    }
  }
</style>
